<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.admin.calculater.CalculaterActivity"
    android:background="#e17822"
    android:padding="0dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="207dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="bottom|right"
        android:textSize="70sp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:id="@+id/btn7"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#787474"
        android:layout_above="@+id/btn6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:id="@+id/btn8"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#787474"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:id="@+id/btn9"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#787474"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="4"
        android:id="@+id/btn4"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#787474"
        android:layout_below="@+id/btn7"
        android:layout_alignLeft="@+id/btn7"
        android:layout_alignStart="@+id/btn7"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        android:id="@+id/btn5"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#787474"
        android:layout_toRightOf="@+id/btn4"
        android:layout_below="@+id/btn7"
        android:layout_toLeftOf="@+id/btn9"
        android:layout_toStartOf="@+id/btn9"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        android:id="@+id/btn6"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#787474"
        android:layout_toRightOf="@+id/btn8"
        android:layout_below="@+id/btn8"
        android:layout_toLeftOf="@+id/btnPlus"
        android:layout_toStartOf="@+id/btnPlus"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        android:id="@+id/btn1"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#787474"
        android:layout_below="@+id/btn4"
        android:layout_alignLeft="@+id/btn4"
        android:layout_alignStart="@+id/btn4"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2"
        android:id="@+id/btn2"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#787474"
        android:layout_toRightOf="@+id/btn1"
        android:layout_below="@+id/btn4"
        android:layout_toLeftOf="@+id/btn6"
        android:layout_toStartOf="@+id/btn6"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="3"
        android:id="@+id/btn3"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#787474"
        android:layout_alignLeft="@+id/btn6"
        android:layout_alignStart="@+id/btn6"
        android:layout_below="@+id/btn5"
        android:layout_toLeftOf="@+id/btnMinus"
        android:layout_toStartOf="@+id/btnMinus"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="91dp"
        android:text="0"
        android:id="@+id/btn0"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#787474"
        android:layout_toRightOf="@+id/btnClear"
        android:layout_below="@+id/btn1"
        android:layout_toLeftOf="@+id/btn3"
        android:layout_toStartOf="@+id/btn3"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="91dp"
        android:text="C"
        android:id="@+id/btnClear"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#f1dc7b27"
        android:layout_below="@+id/btn1"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:onClick="onClickClear" />

    <Button
        android:layout_width="90dp"
        android:layout_height="91dp"
        android:text="="
        android:id="@+id/btnEqual"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#787474"
        android:layout_toRightOf="@+id/btn0"
        android:layout_below="@+id/btn2"
        android:layout_toLeftOf="@+id/btnMult"
        android:layout_toStartOf="@+id/btnMult"
        android:onClick="onClickEqual" />

    <Button
        android:layout_width="90dp"
        android:layout_height="91dp"
        android:text="รท"
        android:id="@+id/btnDvide"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#f5305bc7"
        android:layout_alignLeft="@+id/btnMult"
        android:layout_alignStart="@+id/btnMult"
        android:layout_below="@+id/btn3"
        android:layout_alignRight="@+id/btnMult"
        android:layout_alignEnd="@+id/btnMult"
        android:onClick="onClickOperator"
        android:nestedScrollingEnabled="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="ร"
        android:id="@+id/btnMult"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c73e3e"
        android:layout_toRightOf="@+id/btn3"
        android:layout_below="@+id/btn6"
        android:layout_alignRight="@+id/btnMinus"
        android:layout_alignEnd="@+id/btnMinus"
        android:onClick="onClickOperator"
        android:nestedScrollingEnabled="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="+"
        android:id="@+id/btnPlus"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#c73e3e"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:onClick="onClickOperator"
        android:nestedScrollingEnabled="false" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="-"
        android:id="@+id/btnMinus"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#f5305bc7"
        android:layout_toRightOf="@+id/btn9"
        android:layout_below="@+id/btn9"
        android:layout_alignRight="@+id/btnPlus"
        android:layout_alignEnd="@+id/btnPlus"
        android:onClick="onClickOperator"
        android:nestedScrollingEnabled="false" />

</RelativeLayout>
